<FluentDataGrid Items="@GridData" Pagination="@pagination">
    <PropertyColumn Property="@(p => p.SteamId)" Sortable="true" />
    <PropertyColumn Property="@(p => p.Action)" Sortable="true" />
    <PropertyColumn Property="@(p => p.Amount)" Sortable="true" />
    <PropertyColumn Property="@(p => $"{p.TypeIdString}/{p.SubtypeName}")" Sortable="true" />
    <PropertyColumn Property="@(p => p.StoreName)" Sortable="true" />
    <PropertyColumn Property="@(p => p.Time)" Sortable="true" />
    <PropertyColumn Property="@(p => p.CubeGridDisplayName)" Title="Grid Name" Sortable="true" />
</FluentDataGrid>
<FluentPaginator State="@pagination" />
